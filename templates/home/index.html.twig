{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
	<div class="hero-image">
		<div class="hero-text">
			<h1>Bienvenue sur K-GAMING</h1>
			<p>Vous trouverez ici tout les jeux que vous souhaitez a prix réduit !</p>
		</div>
	</div>
	<section class="tendencies">
		<h2>Tendances</h2>
		<div class="cards">
			{% for tendency in tendencies %}
				<div class="gameCard">
					<div class="cover-img">
						<img src="//images.igdb.com/igdb/image/upload/t_cover_big/{{ render(controller('App\\Controller\\HomeController::getInfosGame', { gameLabel: tendency.label })) }}.jpg" alt="cover for game: {{ tendency.label }}">
					</div>
					<div class="infos">
						<div class="label">
							{{ tendency.label }}
						</div>
						<div class="price">
							{{ tendency.price }} €
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
	
	{#<section class="precommands">
