<header>
	<nav class="header-flex">
		<div class="logo">
			<a href="{{ path('app_home') }}">
				K-GAMING
			</a>
		</div>
		<div class="menus">
			{% for category in categories %}
				<div class="dropdown">
					<button class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"
					        id="dropdown{{ category.label }}">
						{{ category.label }}
					</button>
					<div class="dropdown-menu" aria-labelledby="dropdown{{ category.label }}">
						{% for plateform in plateforms %}
							{% if plateform.category.label == category.label %}
								<a href="{{ path('app_game_platform', {platformSlug: plateform.slug}) }}" class="dropdown-item">
									<img src="{{ plateform.logo }}" alt="logo of {{ plateform.label }}" loading="lazy">{{ plateform.label }}
								</a>
							{% endif %}
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="icons">
			<div class="dropdown">
				<button class="dropBtn" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownCart">
					<i class="cart-icon bi bi-cart4"></i>
					{% if app.session.get('cart') %}
						<div class="cart-count-badge">
							<div class="notif_count">
								{% set quantity = null %}
								{% for cartItem in app.session.get('cart') %}
									{% set quantity = quantity + cartItem.quantity %}
								{% endfor %}
								{{ quantity }}
							</div>
						</div>
					{% endif %}
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownCart">
					{% if app.session.get('cart') %}
						<div class="dropdown-item">
							<div class="cart-item">
								<div class="cart-item-info">
									<p><strong>Total :</strong> {{ cartTotal|price }}</p>
								</div>
							</div>
							<a href="{{ path('app_cart_index') }}" class="btn-primary-orange">Voir le panier</a>
						</div>
						<div class="dropdown-item">
							<a href="{{ path('app_remove_all_cart') }}" class="btn-primary-orange">Vider le
								panier</a>
						</div>
					{% else %}
						<div class="dropdown-item">
							<p>Votre panier est vide</p>
						</div>
					{% endif %}
				</div>
			</div>
			<div class="dropdown">
				<button class="dropBtn" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownUser">
					{% if app.user %}
						{% if app.user.avatar %}
							<img src="{{ app.user.avatar }}" class="profilePicture"
							     alt="profil image of {{ app.user.username }}" loading="lazy">
						{% endif %}
					{% else %}
						<i class="bi bi-person-fill-gear"></i>
					{% endif %}
				</button>
				<div class="dropdown-menu text-small shadow right" aria-labelledby="dropdownUser">
					{% if app.user %}
						{% if is_granted("ROLE_ADMIN") %}
							<a href="{{ path('app_admin') }}">Administration</a>
							<a href="{{ path('newsletter_list') }}">Newsletter</a>
							<hr class="dropdown-divider">
						{% endif %}
						<a href="{{ path('user_my_account') }}">Mon compte</a>
						<a href="{{ path('user_my_order') }}">Mes commandes</a>
						<a href="{{ path('user_my_preference') }}">Mes préférences</a>
						<hr class="dropdown-divider">
						<a href="{{ logout_path() }}" class="disconnect">Déconnexion</a>
					
					{% else %}
						<a href="{{ path('app_login') }}">Connexion</a>
						<a href="{{ path('app_register') }}">Inscription</a>
					{% endif %}
				</div>
			</div>
		</div>
		<span class="burger-btn">&#9776;</span>
		<div id="menu-burger" class="overlay-menu">
			<a href="javascript:void(0)" class="close-btn">&times;</a>
			<div class="overlay-content">
				{% for category in categories %}
					<div class="menu-item-{{ loop.index }}">
						<button class="accordion">{{ category.label }}</button>
						<div class="panel">
							{% for plateform in plateforms %}
								{% if plateform.category.label == category.label %}
									<a href="{{ path('app_game_platform', {platformSlug: plateform.slug}) }}">
										{{ plateform.label }}
									</a>
								{% endif %}
							{% endfor %}
						</div>
					</div>
					<hr>
				{% endfor %}
				<div class="user-menu">
					{% if app.user %}
						<button class="accordion">{{ app.user.username }}</button>
						<div class="panel">
							{% if is_granted("ROLE_ADMIN") %}
								<a href="{{ path('app_admin') }}">Administration</a>
								<a href="{{ path('newsletter_list') }}">Newsletter</a>
								<hr>
							{% endif %}
							<a href="{{ path('user_my_account') }}">Mon compte</a>
							<a href="{{ path('user_my_order') }}">Mes commandes</a>
							<a href="{{ path('user_my_preference') }}">Mes préférences</a>
							<hr>
							<a href="{{ logout_path() }}" class="disconnect">Déconnexion</a>
						</div>
						{% else %}
							<button class="accordion">Compte</button>
							<div class="panel">
								<a href="{{ path('app_login') }}">Connexion</a>
								<a href="{{ path('app_register') }}">Inscription</a>
							</div>
					{% endif %}
				</div>
				<hr>
				<div class="cart-menu">
					<a href="{{ path('app_cart_index') }}" class="cart-btn">Accéder au panier</a>
				</div>
			</div>
		</div>
	</nav>
</header>
